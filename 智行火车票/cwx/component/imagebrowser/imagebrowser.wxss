.picture-scroll {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    height: 100%;
    white-space: nowrap;
}

.picture-item_show {
    position: relative;
    display: inline-block;
    width: 100%;
    height: 100%;
}

.picture-item_detail {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    box-sizing: border-box;
    padding: 10rpx;
    background-color: rgba(0,0,0,0.7);
    color: #fff;
    white-space: pre-wrap;
}

.picture-item_title {
    float: left;
    padding-right: 90rpx;
    font-size: 32rpx;
    line-height: 1.8;
}

.picture-item_desc {
    clear: both;
    font-size: 26rpx;
    line-height: 1.5;
    display: block;
}

.picture-item_number {
    float: right;
    font-size: 24rpx;
    margin-left: -90rpx;
}

image {
    display: inline-block;
}